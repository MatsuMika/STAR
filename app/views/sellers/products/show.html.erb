<div class ="container-fluid">

  <div class ="row">
    <div class="col-md-2 offset-md-5">
      <h3>アイテム詳細</h3>
    </div>
  </div>

  <div class ="row">

    <div class ="col-md-4">
      <%= attachment_image_tag @product, :image, :fill, 300, 300, format: 'jpeg', class:"img-fluid" %>
    </div>

    <div class ="col-md-7">
      <div class ="row">
        <div class ="col-md">
          <h4>商品ID</h4>
            <p><%= @product.id %></p>
          <h4>商品名</h4>
            <p><%= @product.name %></p>
          <h4>税抜価格</h4>
            <p><%= @product.price %></p>
          <h4>ジャンル</h4>
            <p><%= @product.category_name %></p>
          <h4>商品説明</h4>
            <p><%= @product.introduction %></p>
          <h4>ステータス</h4>
            <p>
              <% if @product.is_active == true %>
                <%= "販売中" %>
              <% else %>
                <%= "準備中" %>
              <% end %>
            </p>
        </div>
      </div>
      <div class ="row">
        <div class ="col-10 text-right">
          <%= link_to "編集", edit_sellers_product_path(@product), class: "button" %>
        </div>
      </div>
    </div>

  </div>

</div>