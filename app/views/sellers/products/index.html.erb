<div class="container-fluid">

  <div class ="row">
    <div class="col-md-2 offset-md-5">
      <h3>アイテム一覧</h3>
    </div>
    <div class="col-md-3 text-right">
      <%= link_to "", new_sellers_product_path, class: "nav-link fas fa-plus fa-lg" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-11">
      <table class="table table-hover table-borderless col-12">
        <thead>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </thead>
        <% @products.each do |item| %>
          <tbody>
            <td><%= item.id %></td>
            <td><%= link_to item.name, sellers_product_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.category.category_name %></td>
            <td>
              <% if item.is_active == true %>
                <%= "販売中" %>
              <% else %>
                <%= "準備中" %>
              <% end %>
            </td>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>

</div>
