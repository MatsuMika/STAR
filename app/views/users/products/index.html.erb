<div class= "container-fluid">

  <div class ="row mt-5">
    <div class="col-md-3">
      <!--カテゴリー-->
    <div class ="col-md-9">
      <% if params[:category_id] %>
        <div class ="row ">
          <div class ="col-md-3">
            <h2><%= @category.category_name %></h2>
          </div>
          <div class="col-md-2">
            <h4 class ="align">(全<%= @products.count %>件)</h4>
          </div>
        </div>
      <% else %>
        <h2>商品一覧</h2>
        <h4>全<%= @products.count %>件</h4>
      <% end %>

      <div class="row mb-5">
        <% @products.each do |product| %>
          <div class="col-3">
            <%= link_to product_path(product.id) do %>
              <%= attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg', class:"img-fluid"  %>
              <h5><%= product.name %></h5>
              <% if product.is_active == false %>
                <p>￥<%= product.price %></p><p class="text-danger">売り切れ</p>
              <% else %>
                <p>￥<%= product.price %></p>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
